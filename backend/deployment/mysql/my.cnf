[mysqld]
# Otimizações Gerais
max_connections = 2000
max_user_connections = 2000
thread_cache_size = 100
wait_timeout = 60
interactive_timeout = 60

# InnoDB (Engine principal)
# IMPORTANTE: Ajuste para 70-80% da RAM total do servidor
# Ex: Se tiver 16GB, use 12G. Se tiver 32GB, use 24G.
# Vou deixar 4G como padrão seguro, mas você deve aumentar.
innodb_buffer_pool_size = 4G
innodb_log_file_size = 512M
innodb_flush_log_at_trx_commit = 2 # Mais performance, leve risco em crash
innodb_flush_method = O_DIRECT
innodb_file_per_table = 1
innodb_open_files = 4000
innodb_io_capacity = 2000
innodb_io_capacity_max = 4000

# Buffers e Caches
key_buffer_size = 32M
max_allowed_packet = 64M
table_open_cache = 4000
sort_buffer_size = 4M
read_buffer_size = 2M
read_rnd_buffer_size = 2M
join_buffer_size = 4M
tmp_table_size = 64M
max_heap_table_size = 64M

# Logs (Reduzir IO)
slow_query_log = 1
long_query_time = 2
log_error_verbosity = 2
